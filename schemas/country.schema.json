{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/country.schema.json",
    "title": "Country",
    "description": "Schema for representing a country.",
    "type": "object",
    "properties": {
        "country_id": {
            "type": "integer",
            "description": "ISO 3166-1 alpha-2 country code."
        },
        "country_name": {
            "type": "string",
            "description": "Name of the country."
        },
        "country_code2": {
            "type": "string",
            "description": "ISO 3166-1 alpha-2 country code."
        },
        "country_code3": {
            "type": "string",
            "description": "ISO 3166-1 alpha-3 country code."
        }
    },
    "required": ["country_id", "country_name", "country_code2", "country_code3"]
}
